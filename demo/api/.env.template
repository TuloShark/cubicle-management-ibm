# MongoDB Configuration
MONGO_URI=mongodb://mongo:27017/demo
SEED=true
PORT=3000

# Admin User IDs (Firebase UIDs)
ADMIN_UIDS=user1,user2,user3

# Firebase Service Account (JSON string)
FIREBASE_CREDENTIALS_JSON='{"type":"service_account",...}'

# Email Configuration for Notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Cubicle Management System <your-email@gmail.com>

# Notification Service Configuration
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
SLACK_NOTIFICATIONS_ENABLED=false
MONDAY_NOTIFICATIONS_ENABLED=false

# Slack Configuration (required)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Monday.com Configuration (required)
MONDAY_API_KEY=your_monday_api_key
MONDAY_BOARD_ID=your_monday_board_id

# Frontend URL for links in notifications
FRONTEND_URL=http://localhost:8080
